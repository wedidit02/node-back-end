<%- include('./partials/header'); -%>

<link rel="stylesheet" href="css/sell.css">

<section class="container-sell">
    <div class="title">
        <h1>hello seller</h1>
    </div>

    <form class="form-wrapper" action="/user/seller/sell-now" method="post" enctype="multipart/form-data">
        <div class="">
            <div class="wt-h mg-b product">
                <label class="form-label" for="title"><span>Tittle:</span></label>
                <input class="form-control wt-h" id="title" name="tittle" type="text" required
                    autocomplete="off">
            </div>
            <div class="wt-h mg-b product">
                <label class="form-label" for="description">Description:</label>
                <textarea class="description wt-h" name="description" id="description" cols="auto" rows="10"
                    minlength="10" maxlength="250" required></textarea>
            </div>

            <div class="mg-b">
                <div class="wt-h product">
                    <label class="form-label" for="category">Category</label>
                    <select class="form-select" name="category" id="category" required>
                        <option value="">Select</option>
                        <option value="accessorie">Accessories</option>
                        <option value="computer">Computer</option>
                        <option value="fashing">Fashion</option>
                        <option value="game">Game</option>
                        <option value="housing">Housing</option>
                        <option value="household">Houehold</option>
                        <option value="phone">Phone</option>
                    </select>
                </div>
                <div class="display-none" id="more-detailes">
                </div>
                <div class="wt-h product">
                    <label class="form-label" for="condition">Condition</label>
                    <select class="form-select" name="condition" id="condition" required>
                        <option value="">Select</option>
                        <option value="new">New</option>
                        <option value="like-new">Used - Like New</option>
                        <option value="good">Used - Good</option>
                        <option value="fair">Used - Fair</option>
                    </select>
                </div>
            </div>

            <div class="wt-h mg-b product">
                <label class="form-label" for="price">Price:</label>
                <input class="form-control wt-h" type="number" name="price" id="price" min="0.00" step="0.05" required>
            </div>
            <div class="wt-h mg-b product">
                <input class="form-control" name="product-image" type="file" accept="image/*" multiple maxlength="3"
                    required>
            </div>
            <div class="wt-h mg-b product">
                <button class="btn wt-h" type="submit">Sell now</button>
            </div>
        </div>
    </form>
</section>

<script defer src="js/seller.js"></script>
<%- include('./partials/footer'); %>